<!doctype html>
<html>
  <head>
    <title><%=shopName%></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <h1>About <%=shopName%> Shop</h1>
    <p>We sell all sorts of drinks</p>

    <h2>Our Shop Locations</h2>
    <ul>
        <% shops.forEach(shop => { %>
          <li>
            <strong><%= shop.location %></strong><br>
            Manager: <%= shop.manager %><br>
            Address: <%= shop.address %>
          </li>
        <% }) %>
    </ul>
  </body>
</html>
